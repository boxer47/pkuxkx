#class chat open;
#list chat_ignore_list create {
    萧峰(xiao feng)告诉你;
    韩世忠(han shizhong)告诉你;
    我找不到,请看其他的回复;
    连续的重复查询是不起作用的;
    快去摁死它吧;
    并不存在;
    青山不改，绿水常流，咱们后会有期;
    这封信用特殊药水写就;
    钱眼开记完帐;
    暂时不能处理你的询问,请稍等;
    总舵主把狗皇帝扣在六和塔上了;
    蒙哥对着;
    蒙哥(Meng ge): 抓刺客！;
    快来快来，肥水不留外人田，有好事当然想着你了;
    牧场上最近出现了一只游荡的野狼，已经吞食了很多单身的旅人，没事最好经过这里。;
    华容道最近被一伙山贼占据，没事最好绕道而行;
    不许当街打架！;
    修这把兵器共花了;
    你还没找到之前失散的亲戚吧;
};

#foreach {${chat_ignore_list}[%*]} {chat_ignore} {
    #action {${chat_ignore}} {
        #cr;
    } {2};
};

#gag {【闲聊】%*};
#action {【闲聊】%*} {
    show_to_chat %0;
} {4};

#action {^【闲聊】%*(%*): %*} {
    remember @lower{%2};
    show_to_chat %0;
    chat.record %0;
    #if {${xmpp_chat} == 1} {
        #xmpp %0;
    };
    #elseif {@issubstring{%3;${char_name}} == 1 || @issubstring{%3;${char_id}} == 1} {
        #if {"@lower{%2}" != "${char_id}"} {
            #xmpp %0;
        };
    };
} {3};

#action {^%w(%w){回答|告诉}你：%*} {
    show_to_chat 【私聊】%0;
    chat.record %0;
    #xmpp 【私聊】From %1(%2)：%3;
} {4};

#action {^你{回答|告诉}%1：%2} {
    show_to_chat 【私聊】%0;
    chat.record %0;
    #xmpp 【私聊】To %1：%2;
} {4};

#alias {chat.record} {
    #return
    #if {"${char_id}" == "erq"} {
        #var chat_content %0;
        #format {current_epoch} {%T};
        #format {current_time} {%t} {%F %R};
        #system {sqlite3 db/chat.db 'insert or ignore into chat values (${current_epoch}, "${current_time}", "${chat_content}")'};
    };
};

#alias {chat.query} {
    #format {current_epoch} {%T};
    #math last_epoch ${current_epoch} - 2*60*60;
    #system {sqlite3 db/chat.db 'select date, content from chat where epoch > ${last_epoch} order by epoch'};
};

#alias {remember} {
    #return
    #if {@ismember{%1;contacts} != 0} {
        #return;
    };
    #else {
        #list contacts add %1;
        #tab %1;
        #delay {flush_contacts_delay} {
            #class contacts write plugin/contacts.tin;
        } {60};
    };
};

load contacts;
#foreach {${contacts}[%*]} {contact} {
    #tab ${contact};
};

#class chat close;